{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "node"]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
